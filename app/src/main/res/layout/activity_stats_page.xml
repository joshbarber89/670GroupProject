<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/gold"
    android:columnCount="1"
    android:rowCount="4"
    tools:context=".StatsPageActivity">

    <CheckBox
        android:id="@+id/eatingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="fill"
        android:text="@string/statsEatingCheck"
        android:layout_row="0"
        android:layout_column="0" />

    <CheckBox
        android:id="@+id/medicationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="fill"
        android:text="@string/statsMedicationCheck"
        android:layout_row="1"
        android:layout_column="0" />

    <CheckBox
        android:id="@+id/exerciseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="fill"
        android:text="@string/statsExerciseCheck"
        android:layout_row="2"
        android:layout_column="0" />

    <CheckBox
        android:id="@+id/bloodSugarTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="fill"
        android:text="@string/statsBloodSugarCheck"
        android:layout_row="3"
        android:layout_column="0" />

</GridLayout>
