<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registerActivityTextViewLoginText" />

    <EditText
        android:id="@+id/registerActivityEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/registerActivityEditTextEmailAddress"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registerActivityTextViewPassword" />

    <EditText
        android:id="@+id/registerActivityPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/registerActivityEditTextPassword"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registerActivityTextViewRePassword" />


    <EditText
        android:id="@+id/registerActivityRePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/registerActivityEditTextRePassword"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/registerActivityButtonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registerActivityButtonRegister"/>

    <Button
        android:id="@+id/registerActivityButtonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registerActivityButtonBack"/>

</LinearLayout>