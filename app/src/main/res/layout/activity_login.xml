<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginActivityTextViewLogin" />

    <EditText
        android:id="@+id/loginActivityEditTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/loginActivityEditTextHintLogin"
        android:inputType="textEmailAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginActivityTextViewPassword" />


    <EditText
        android:id="@+id/loginActivityEditTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"/>


    <CheckBox
        android:id="@+id/loginActivityCheckboxRememberMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loginActivityCheckboxRememberMe" />

    <Button
        android:id="@+id/loginActivityButtonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loginActivityButtonLogin" />
    <Button
        android:id="@+id/loginActivityButtonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loginActivityButtonRegister"/>

</LinearLayout>


